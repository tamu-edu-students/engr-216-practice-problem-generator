<div class="container mt-5">
  <div class="card shadow p-5">
    <h2 class="text-center mb-4">Create a New Question Template</h2>

    <%= form_with url: select_template_type_path, method: :post, local: true do |form| %>
      <div class="mb-3">
        <%= form.label :question_type, "Select Question Type", class: "form-label" %>
        <%= form.select :question_type,
              [["Equation-Based", "equation"], ["Dataset-Based", "dataset"], ["Definition-Based", "definition"]],
              { prompt: "-- Choose a question type --" },
              class: "form-select" %>
      </div>

      <div class="text-center mt-4">
        <%= form.submit "Continue", class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>
</div>
