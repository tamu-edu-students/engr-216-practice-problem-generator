<div class="mb-3">
  <%= form.label :template_text, "Question Text", class: "form-label" %>
  <%= form.text_area :template_text, class: "form-control" %>
  <small class="form-text text-muted">Use \( D \) in your question to reference the dataset.</small>
</div>

<div class="mb-3">
  <%= form.label :dataset_generator, "Dataset Generator", class: "form-label" %>
  <%= form.text_field :dataset_generator, class: "form-control", placeholder: "e.g. 5-25, size=10" %>
  <small class="form-text text-muted">
    Format: min-max, size=n. Example: "10-50, size=8"
  </small>
</div>

<div class="mb-3">
  <%= form.label :answer_strategy, "Answer Type", class: "form-label" %>
  <%= form.select :answer_strategy, [["Mode", "mode"], ["Mean", "mean"], ["Median", "median"]], {}, class: "form-select" %>
</div>
